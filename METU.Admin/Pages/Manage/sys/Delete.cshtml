@page
@model METU.Admin.Pages.Manage.sys.DeleteModel

@{
    ViewData["Title"] = "删除";
}

<hr />

<!-- /# row -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post">
                        @for (int i = 0; i < Model.dtCtrols.Rows.Count; i++)
                        {
                             @if(Model.dtCtrols.Rows[i]["english"].ToString().Trim()!="inputop"){
                            <div class="form-group">
                            <label> @Model.dtCtrols.Rows[i]["chinese"]</label>
                            <input name="@Model.dtCtrols.Rows[i]["english"]" type="@Model.dtCtrols.Rows[i]["controltype"]" class="form-control" placeholder="@Model.dtCtrols.Rows[i]["placeholder"]"  value="@Model.dts.Rows[0][Model.dtCtrols.Rows[i]["english"].ToString().Trim()]">
                        </div>
                            }

                        }
                        <div class="form-group">
                            <input type="submit" value="删除" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
